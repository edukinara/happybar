{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "outDir": "dist",
    "rootDir": "src",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "composite": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@happy-bar/types": ["../types/src/index"],
      "@happy-bar/types/*": ["../types/*"]
    }
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"],
  "references": [{ "path": "../types" }]
}
