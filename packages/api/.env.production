# Production Environment Variables for API Server
# Copy this to .env.production.local and fill in your values

# Server Configuration
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# Database
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# Redis (Upstash)
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token

# Authentication
JWT_SECRET=your-jwt-secret-here
BETTER_AUTH_SECRET=your-better-auth-secret-here

# Autumn Subscription Management
AUTUMN_SECRET_KEY=your-autumn-secret-key

# Google OAuth (if enabled)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Toast POS Integration (if enabled)
TOAST_PARTNER_TOKEN=your-toast-partner-token

# Email Service (Optional - for invitations)
RESEND_API_KEY=your-resend-api-key
FROM_EMAIL=noreply@happybar.app

# Error Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Webhooks (Optional)
WEBHOOK_SECRET=your-webhook-secret

# CORS Origins
ALLOWED_ORIGINS=https://happybar.app,https://admin.happybar.app