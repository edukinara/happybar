{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "CommonJS",
    "moduleResolution": "node",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@happy-bar/database": ["../database/src/index"],
      "@happy-bar/types": ["../types/src/index"],
      "@happy-bar/pos": ["../pos/src/index"]
    }
  },
  "include": ["src", "src/types"],
  "exclude": ["dist", "node_modules"],
  "references": [
    { "path": "../database" },
    { "path": "../types" },
    { "path": "../pos" }
  ]
}
