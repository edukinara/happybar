# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Admin Authentication (separate from customer auth)
ADMIN_JWT_SECRET=your-admin-jwt-secret-here

# Database URL (read-only replica recommended for production)
DATABASE_URL=postgresql://user:password@localhost:5432/happybar

# Admin Access Control
# Comma-separated list of email domains allowed for admin access
ADMIN_ALLOWED_DOMAINS=happybar.com,yourdomain.com

# Feature Flags
ENABLE_IMPERSONATION=true
ENABLE_DATA_EXPORT=true
ENABLE_BILLING_OVERRIDE=false

# Monitoring
SENTRY_DSN=
DATADOG_API_KEY=